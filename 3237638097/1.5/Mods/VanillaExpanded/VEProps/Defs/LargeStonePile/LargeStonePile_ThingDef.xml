<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="AdaptiveStorageBase">
        <defName>ReelStorageLargeStonePile</defName>
		<label>grand tas de pierres</label>
		<graphicData>
			<texPath>Things/Building/WorkshopProps/VFEPD_BlocksPileB/VFEPD_BlocksPileB</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(3,3)</drawSize>
			<drawRotated>false</drawRotated>
		</graphicData>
		<description>A larger pile specifically designed to hold stone chunks and blocks for use in construction and crafting. Items stored inside will have no impact on the beauty of their surroundings. \n\n&lt;color=#E5E54C&gt;Storage stats:&lt;/color&gt; 
Stack size total: 32 
Stack per tile: 8 

Allowed items: Stone blocks, Stone chunks</description>
		<fillPercent>0.20</fillPercent>
		<uiIconScale>1</uiIconScale>
		<size>(2,2)</size>
		<rotatable>true</rotatable>
		<defaultPlacingRot>North</defaultPlacingRot>
		<researchPrerequisites>
			<li>ReelMedievalStorage</li>
			<li>Stonecutting</li>
		</researchPrerequisites>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<WorkToBuild>2200</WorkToBuild>
			<Beauty>0</Beauty>
			<Mass>48</Mass>
			<Flammability>0</Flammability>
		</statBases>
		<stuffCategories>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>180</costStuffCount>
		<building>
			<preventDeteriorationOnTop>true</preventDeteriorationOnTop>
            		<ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
			<maxItemsInCell>8</maxItemsInCell>
			<fixedStorageSettings>
				<filter>
					<categories>
						<li>StoneBlocks</li>       
						<li>StoneChunks</li>   						
					</categories>
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<priority>Preferred</priority>
				<filter>
					<categories>
						<li>StoneBlocks</li>       
						<li>StoneChunks</li>   						
					</categories>
				</filter>
			</defaultStorageSettings>
			<paintable>true</paintable>
		</building>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsFurniture</li>
		</thingCategories>
	</ThingDef>
</Defs>