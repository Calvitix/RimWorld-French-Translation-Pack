<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="AdaptiveStorageBase">
        <defName>ReelStorageStonePile</defName>
		<label>tas de pierres</label>
		<graphicData>
			<texPath>Things/Building/WorkshopProps/VFEPD_BlocksPileC/VFEPD_BlocksPileC</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(1.8,1.8)</drawSize>
			<drawRotated>false</drawRotated>
		</graphicData>
		<description>A small pile specifically designed to hold stone chunks and blocks for use in construction and crafting. Items stored inside will have no impact on the beauty of their surroundings. \n\n&lt;color=#E5E54C&gt;Storage stats:&lt;/color&gt; 
Stack size total: 6 
Stack per tile: 6 

Allowed items: Stone blocks, Stone chunks</description>
		<fillPercent>0.20</fillPercent>
		<uiIconScale>0.7</uiIconScale>
		<size>(1,1)</size>
		<rotatable>true</rotatable>
		<defaultPlacingRot>East</defaultPlacingRot>
       		<researchPrerequisites>
            		<li>ReelNeolithicStorage</li>
            		<li>Stonecutting</li>
		</researchPrerequisites>
		<statBases>
			<MaxHitPoints>50</MaxHitPoints>
			<WorkToBuild>550</WorkToBuild>
			<Beauty>0</Beauty>
			<Mass>12</Mass>
			<Flammability>0</Flammability>
		</statBases>
        	<stuffCategories>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>45</costStuffCount>
		<building>
			<preventDeteriorationOnTop>true</preventDeteriorationOnTop>
            		<ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
			<maxItemsInCell>6</maxItemsInCell>
			<fixedStorageSettings>
				<filter>
					<categories>
						<li>StoneBlocks</li>       
						<li>StoneChunks</li>   						
					</categories>
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<priority>Preferred</priority>
				<filter>
					<categories>
						<li>StoneBlocks</li>       
						<li>StoneChunks</li>   						
					</categories>
				</filter>
			</defaultStorageSettings>
			<paintable>true</paintable>
		</building>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsFurniture</li>
		</thingCategories>
	</ThingDef>
</Defs>