<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="AdaptiveStorageBase">
        <defName>ReelStorageSpacerContainerStack</defName>
		<label>groupe de container spatiaux</label>
		<graphicData>
			<texPath>Things/Building/SpacerProps/SpacerContainerStack/SpacerContainerStackC</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(3.5,3.1)</drawSize>
			<drawRotated>false</drawRotated>
            <shaderType>CutoutComplex</shaderType>
		</graphicData>
		<description>A stack of three advanced containers designed for storing large quantities of goods and valuables in vessels and colonies. Items stored inside will not deteriorate over time and have no impact on the beauty of their surroundings. \n\n&lt;color=#E5E54C&gt;Storage stats:&lt;/color&gt; 
Stack size total: 80 
Stack per tile: 20 

Allowed items: Everything except Foods, Corpses and Chunks</description>
		<fillPercent>0.20</fillPercent>
		<uiIconScale>0.7</uiIconScale>
		<size>(2,2)</size>
		<rotatable>false</rotatable>
		<defaultPlacingRot>South</defaultPlacingRot>
		<researchPrerequisites>
			<li>ReelSpacerStorage</li>
		</researchPrerequisites>
		<statBases>
			<MaxHitPoints>1750</MaxHitPoints>
			<WorkToBuild>28800</WorkToBuild>
			<Beauty>0</Beauty>
			<Mass>22</Mass>
			<Flammability>0</Flammability>
		</statBases>
		<costList>
			<Plasteel>320</Plasteel>
			<ComponentIndustrial>12</ComponentIndustrial>
			<ComponentSpacer>3</ComponentSpacer>
		</costList>
		<building>
			<preventDeteriorationOnTop>true</preventDeteriorationOnTop>
			<ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
			<maxItemsInCell>20</maxItemsInCell>
			<fixedStorageSettings>
				<filter>
					<categories>
						<li>Root</li>                    						
					</categories>
                    			<disallowedCategories>
                        			<li>Chunks</li>             
                        			<li>Corpses</li>
                        			<li>FoodMeals</li>
						<li>Foods</li>   
                    			</disallowedCategories>
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<priority>Preferred</priority>
				<filter>
					<categories>
						<li>Root</li>                    						
					</categories>
                    			<disallowedCategories>
                        			<li>Chunks</li>             
                        			<li>Corpses</li>
                        			<li>FoodMeals</li>
						<li>Foods</li>   
                    			</disallowedCategories>
				</filter>
			</defaultStorageSettings>
			<paintable>true</paintable>
		</building>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsFurniture</li>
		</thingCategories>
	</ThingDef>
</Defs>